{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "baseUrl": ".",
    "composite": false,
    "downlevelIteration": true,
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
